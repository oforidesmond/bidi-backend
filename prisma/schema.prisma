generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int       @id @default(autoincrement())
  name        String?
  nationalId String?   @unique
  contact     String?   @unique
  gender      String?
  cardUrl    String?   // Stores file path or URL for JPG, JPEG, PNG
  email       String    @unique
  password    String
  role        Role      @relation(fields: [roleId], references: [id])
  roleId      Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  omc         Omc?      @relation(fields: [omcId], references: [id])
  omcId       Int?
  station     Station?  @relation(fields: [stationId], references: [id])
  stationId   Int?
  vehicleCount  Int?
  companyName   String?
  region        String?
  district      String?
  transactions Transaction[]
  stationPriceChangedBy   StationProductPriceHistory[]
  pumps       Pump[]    @relation("PumpAttendantAssignment")
  driverTransactions Transaction[] @relation("DriverTransactions")
}

model Role {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  users       User[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Omc {
  id             Int       @id @default(autoincrement())
  name           String     @unique
  location       String?
  logo           String?   // Stores file path or URL for JPG, JPEG, PNG
  contactPerson  String?
  contact        String?
  email          String?
  catalog        ProductCatalog[]
  stations       Station[]
  users          User[]
  createdAt      DateTime  @default(now())
  updatedAt      DateTime  @updatedAt
  deletedAt      DateTime?
}

model ProductCatalog {
  id          Int       @id @default(autoincrement())
  name        String    // e.g., "Gasoline", "Diesel"
  omc         Omc       @relation(fields: [omcId], references: [id])
  omcId       Int
  pumps       Pump[]
  transactions Transaction[]
  defaultPrice Float?
  stationPrices StationProductPrice[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?

  @@unique([omcId, name], name: "omcId_name")
}

model Station {
  id            Int          @id @default(autoincrement())
  name          String
  region      String?
  district     String?
  town        String?
  managerName   String?
  managerContact String?
  omc           Omc          @relation(fields: [omcId], references: [id])
  omcId         Int
  dispensers    Dispenser[]
  users         User[]
  transactions  Transaction[]
  stationProductPrices StationProductPrice[]
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt
  deletedAt     DateTime?

  @@unique([name, omcId], name: "name_omcId")
}

model StationProductPrice {
  id                Int               @id @default(autoincrement())
  catalog   ProductCatalog    @relation(fields: [catalogId], references: [id])
  catalogId Int
  station          Station           @relation(fields: [stationId], references: [id])
  stationId        Int
  price            Float
  effectiveFrom      DateTime          @default(now())
  history            StationProductPriceHistory[]
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  deletedAt        DateTime?

  @@unique([catalogId, stationId])
}

model StationProductPriceHistory {
   id                 Int               @id @default(autoincrement())
  priceId            Int
  priceRecord        StationProductPrice @relation(fields: [priceId], references: [id])

  oldPrice           Float
  changedAt          DateTime          @default(now())
  changedById        Int?
  changedBy          User?             @relation(fields: [changedById], references: [id])
}

model Dispenser {
  id          Int       @id @default(autoincrement())
  dispenserNumber String @unique
  station     Station   @relation(fields: [stationId], references: [id])
  stationId   Int
  transactions Transaction[]
  pumps       Pump[]
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Pump {
  id          Int       @id @default(autoincrement())
  pumpNumber  String    @unique
  productCatalog ProductCatalog @relation(fields: [productCatalogId], references: [id])
  productCatalogId   Int
  dispenser   Dispenser? @relation(fields: [dispenserId], references: [id])
  dispenserId Int?
  transactions Transaction[]
  attendants  User[]    @relation("PumpAttendantAssignment")
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
}

model Transaction {
  id             Int       @id @default(autoincrement())
  productCatalog  ProductCatalog? @relation(fields: [productCatalogId], references: [id])
  productCatalogId      Int?
  liters         Float?
  amount         Float?
  pumpAttendant  User?      @relation(fields: [pumpAttendantId], references: [id])
  pumpAttendantId Int?
  station        Station?   @relation(fields: [stationId], references: [id])
  stationId      Int?
  dispenser     Dispenser? @relation(fields: [dispenserId], references: [id])
  dispenserId    Int?
  pump           Pump?      @relation(fields: [pumpId], references: [id])
  pumpId         Int?
  driver         User?      @relation("DriverTransactions", fields: [driverId], references: [id])
  driverId       Int?
  token          String?   @unique
  createdAt      DateTime  @default(now())
  deletedAt      DateTime?
}